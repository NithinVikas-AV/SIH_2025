rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own profile and view a list of volunteers
    match /users/{userId} {
      allow read: if request.auth != null; // Anyone logged in can see user lists
      allow write: if request.auth.uid == userId; // Only you can update your own profile
    }
    // Rules for chat rooms
    match /chats/{chatId} {
      // Allow read/write only if the requesting user is a participant in the chat
      allow read, write: if request.auth.uid in resource.data.participants;
      // Rules for the messages sub-collection
      match /messages/{messageId} {
        // Allow read if the user is a participant of the parent chat document
        allow read: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        // Allow create only if the senderId matches the logged-in user's ID
        allow create: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants
                      && request.resource.data.senderId == request.auth.uid;
      }
    }
  }
}
